{
  // The name of the app that will be displayed to the user
  "name": "Skill Improver",

  // A shorter name that will be used when there is limited space
  "short_name": "Skill Improver",

  // A description of the app
  "description": "Skill Improver - an easy-to-use, cutting-edge application designed for beginners and experienced typists alike. Enhance your typing skills and increase your speed.",

  // An array of icons that will be used to represent the app
  "icons": [
    {
      "src": "files/img/skill-128.png",
      "sizes": "128x128",
      "type": "image/png"
    },
    {
      "src": "files/img/skill-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "files/img/skill-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],

  // The URL that the app will start from
  "start_url": "/index.html",

  // The display mode of the app (e.g. "standalone", "fullscreen")
  "display": "standalone",

  // The background color of the app
  "background_color": "#ffffff",

  // The color that will be used for the app's theme
  "theme_color": "#ffffff"
}
